@using WebApplication1.Models;
@model List<Images>

<h1>Product Images</h1>
<a asp-action="AddOrUpdateImage">Add Images for Product</a>

<table class="table table-responsive table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Images</th>
            <th scope="col">Product</th>
            <th scope="col">Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var Images in Model)
        {
            <tr>
                <td>@Images.Id</td>
                
                <td>
                    <img src="/images/@Images.Url" alt="@Images.Product.Title" class="img-fluid" height="100" width="120" />
                </td>
                <td>@Images.Product.Title</td>
                     <td>
                    <a asp-controller="Admin" asp-action="ViewImage" asp-route-id="@Images.Id">View</a>
                    <a asp-controller="Admin" asp-action="DeleteImage" asp-route-id="@Images.Id">Delete</a>
                    <a asp-controller="Admin" asp-action="AddOrUpdateImage" asp-route-id="@Images.Id">Edit</a>

                </td>
            </tr>
        }


    </tbody>
</table>
