@using WebApplication1.Migrations
@model Order

<div class="container">
    <form asp-controller="Admin" asp-action="AddOrUpdateOrder" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-1">
            <label class="form-label" asp-for="ProductId">Select Product </label>
            <select asp-for="ProductId" class="form-control" asp-items="@ViewBag.Product">
            </select>
        </div>

        <div class="mb-1">
            <label class="form-label" asp-for="BuyerId">Buyer </label>
            <select asp-for="BuyerId" class="form-control" asp-items="@ViewBag.Buyer">
            </select>
        </div>

        <div class="mb-1">
            <label asp-for="CreatedOn" class="form-label">Created On</label>
            <input type="date" asp-for="CreatedOn" class="form-control">
        </div>

        <div class="mb-1">
            <label class="form-label" asp-for="OrderStatusId">Order Status </label>
            <select asp-for="OrderStatusId" class="form-control" asp-items="@ViewBag.OrderStatus">
            </select>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
</div>